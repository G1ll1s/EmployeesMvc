@model EmployeesMvc.Models.Employee;

<form asp-controller="employees" asp-action="editemployee" method="post">

    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model.Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Email"></label>
    <input asp-for="Email" value="@Model.Email" />
    <span asp-validation-for="Email"></span>

    <label asp-for="Description"></label>
    <input asp-for="Description" value="@Model.Description" />
    <span asp-validation-for="Description"></span>

    <input hidden asp-for="Id" value="@Model.Id" />
    <input hidden asp-for="CreationTimeStamp" value="@Model.CreationTimeStamp" />

    <input type="submit" value="Ändra" />

</form>
<div asp-validation-summary="All">
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
        asp-fallback-src="/scripts/lib/jquery/jquery.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>